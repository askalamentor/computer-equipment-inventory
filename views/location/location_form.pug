extends ../layout 

block content 
    h1.text-center.p-4.text-dark= title

    div.container-fluid
        div.row
            div.col
                div.container-fluid 
                    form(method="POST", action="")
                        div.d-flex.flex-column.align-items-center
                            div.form-group.col-10.mb-3.fs-4
                                label.mb-2(for="name") #[strong Name:] 
                                input.form-control(type="text" id="name" placeholder="Name of location/store" name="name" 
                                required="true" value=(undefined === location ? "" : location.name))
                            div.form-group.col-10.mb-5.fs-4
                                label.mb-2(for="address") #[strong Address:]  
                                input.form-control(type="text" id="address" placeholder="Address of location/store" name="address"
                                required="true" value=(undefined === location ? "" : location.address))
                            button.btn.btn-primary.btn-lg(type="submit") Create Location 

                        if errors 
                            ul 
                                for error in errors 
                                    li!= error.msg