extends ../layout

block content 
    h1= title 

    div(class="container-fluid")
        div(class="row justify-content-between")
            each location in location_list 
                div(class="col-5 card text-bg-light border-secondary mt-3 mb-3")
                    div(class="card-body")
                        a(href=location.url class="card-title card-link icon-link icon-link-hover") #{location.name}
                        p(class="card-text") #[strong Address:] #{location.address}
                        p(class="card-text") #[strong Inventory Records:] #{location.inventory.length}
                        a(href=location.url) See details
            else 
                p There is no inventory.
    