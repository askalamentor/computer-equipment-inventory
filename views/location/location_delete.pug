extends ../layout 

block content 
    h1.text-center.p-4.text-dark #{title}: #{location.name}

    if location_inventories.length 

        p.text-center.p-4.text-danger #[strong Delete the following inventories before attempting to delete this location.]

            div.d-flex.flex-column.align-items-center(style="margin-left:20px; margin-top:20px")

                h4.p-4.text-dark Inventories 

                div.container-fluid
                        div.row
                            div.col
                                div.container-fluid.d-flex.flex-column.flex-lg-row.flex-wrap.align-items-center.justify-content-evenly
                                    each inventory in location_inventories 
                                        div.card.col-10.col-lg-5.mb-4.p-1.bg-secondary
                                            div.card-body
                                                a.card-title.card-link.icon-link.icon-link-hover.text-warning.fs-4.link-underline.link-underline-opacity-0(href=inventory.url) #{inventory.equipment.name}


    else 
        p.text-center.p-4.text-dark.fs-3 Do you really want to delete this Location?

        form(method="POST" action="")
            div.d-flex.flex-column.align-items-center
                div.form-group.mt-5.mb-5.col-10
                    input.form-control.p-3(type="hidden" id="locationid" name="locationid" required="true" value=location._id)
                button.btn.btn-primary(type="submit") Delete Location