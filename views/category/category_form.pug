extends ../layout

block content 
    h1.text-center.p-4.text-dark #{title}

    div.container-fluid
        div.row
            div.col
                div.container-fluid.w-75
                    form(method="POST" action="")
                        div.d-flex.flex-column.align-items-center
                            div.form-group.mt-5.mb-5.col-10
                                input.form-control.p-3(type="text" id="name" placeholder="Bag, Shoes etch."
                                name="name" value=(undefined===genre ? "" : genre.name), required="true")
                            button.btn.btn-primary.btn-lg(type="submit") Create Category

                        if errors 
                            ul 
                                for errors in errors 
                                    li!=error.msg
            