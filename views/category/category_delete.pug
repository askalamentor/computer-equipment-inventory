extends ../layout

block content 
    h1 #{title}: #{category.name}

    if category_equipments.length 

        p #[strong Delete the following equipments before attempting to delete this category.]

            div(style="margin-left:20px;margini-top:20ox")

                h4 Equipments 

                dl 
                each equipment in category_equipments 
                    dt 
                        a(href=equipment.url) #{equipment.name}
                    dd #{equipment.description}

    else 
        p Do you really want to delete this Category?

        form(method="POST" action="")
